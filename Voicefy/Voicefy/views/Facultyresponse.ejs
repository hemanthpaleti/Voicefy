<!DOCTYPE html>
<html>
<head>
    <style> 
        body {
            margin: 0;
            padding: 0; 
            background-color: #B3B3B3;
        }

        .header {
            background-color: #F433FF;
            width: 100%;
            height: 100px;
            position: fixed;
            top: 0;
            text-align: left;
            color: #fff; 
        }
        
        .container {
            width: 800px;
            margin: 80px auto; /* Centering the container below the header */ 
            margin-top: 150px;
            padding: 20px;
            background-color: #FF83FF;
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }

        table, th, td {
            border: 1px solid #ccc;
        }

        th, td {
            padding: 10px;
        }

        #problems {
            text-align: left;
        }

        h1, h2 {
            margin: 20px 0;
        }  

        .name{ 
            margin-left: 10px;
        }
    </style>
</head>
<body>
    <header class="header">
        <h1 class="name"> Welcome, <%= value %></h1>
    </header>
    
    <div class="container">
        <h1>Student Problem Portal</h1>
        <h2>Student Information</h2>
        <table>
            <tr>
                <th>Student ID</th>
                <th>Student Problem</th>
            </tr>
            <tbody id="studentTable">
                <% docs.forEach(doc=>{ %>
                    <tr>
                        <td><%= doc.Reg_No %></td>
                        <td><%= doc.Problem %></td>
                        
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <h2></h2>
        <div id="problems">
            <div id="problemList"></div>
        </div>
    </div>

    <!-- Include Firebase SDK -->
    <script src="https://www.gstatic.com/firebasejs/9.6.5/firebase-app-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.6.5/firebase-firestore-compat.js"></script>
    <script src="app.js"></script>
    <% if (alertMessage) { %>
        <script>
          alert('<%- alertMessage %>');
        </script>
    <% } %>
</body>
</html>
